<div class="container">
  <div class="mx-auto col-sm-9">
    <h2 class="text-main">プロフィール編集</h2>
      <!--ひとかたまり-->
      <%= form_with model:@user, local:true do |f| %>
      　<!--プロフィール画像-->
        <div class="row">
        　<div class='col-sm-2 offset-md-1'>
            <div class = "field">
              <p>画像</p>
            </div><br>
            <div class = "field">
              <p>名前</p>
            </div><br>
            <div class = "field">
              <p>紹介文</p>
            </div><br>
          </div>
          <div class = "col-sm-7 offset-md-1">
            <div class = "field">
              <p><%= f.attachment_field :profile_image, placeholder: "profile_image" %></p>
            </div><br>
            <div class = "field">
              <p><%= f.text_field :name, class: "form-control-static col-4" %></p>
            </div><br>
            <div class = "field">
              <p><%= f.text_area :introduction,size:"35x6",　class:"form-control-static" %></p>
            </div><br>
            <div class="actions">
              <%= f.submit "編集する", class: 'btn btn-success' %>
            </div>

          </div>
        </div>
      <% end %>
  </div>
</div>
