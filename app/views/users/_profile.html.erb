<table class="table">
  <tr>
    <%= attachment_image_tag user, :profile_image, :fill, 150, 150, fallback: "img/no_image.jpg", class:"mt-3 rounded-circle"; %>
  </tr>
  <tr>
    <th>名前</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>紹介文</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <td><%= link_to user.followings.count,user_followings_path(user) %></td>
  </tr>
  <tr>
    <th>followers</th>
    <td><%=link_to user.followers.count, user_followers_path(user) %></td>
  </tr>
</table>

<div class="row">
  <!--ログインuserがuserでない時-->
  <% if current_user != user %>
  　<!--ログインuserはfollow?-->
    <% if current_user.following?(user) %>
      <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %>
    <% end %>
  <% end %>

</div>

<div class='row mt-3'>
  <% if user.id == current_user.id %>
    <%= link_to '設定・編集',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user}" %>
  <% end %>
</div>