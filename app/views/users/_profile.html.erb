<table class="table">
  <tr>
    <p class="text-center"><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "img/no_image.jpg", size: "150x150", class:"mt-3 rounded-circle"; %></p>
  </tr>
  <tr>
    <th>名前</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>紹介文</th>

    <th><%=safe_join(user.introduction.split("\n"),tag(:br))%></th>
  </tr>
  <tr>
    <th>フォロー中</th>
    <td><%= link_to user.followings.count,user_followings_path(user) ,class: "text-dark" %></td>
  </tr>
  <tr>
    <th>フォローワー</th>
    <td><%=link_to user.followers.count, user_followers_path(user) ,class: "text-dark" %></td>
  </tr>
</table>

<div class="row">
  <!--ログインuserがuserでない時-->
  <% if current_user != user %>
  　<!--ログインuserはfollow?-->
    <% if current_user.following?(user) %>
      <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary fab fa-twitter" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success fab fa-twitter" %>
    <% end %>
  <% end %>

</div>

<div class='row mt-3'>
  <% if user.id == current_user.id %>

    <%= link_to '設定・編集',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
  <% end %>
</div>