<div class="container">
  <div class="mx-auto col-sm-9">
    <h2 class="text-main">フォローワー</h2>
    <table class='table'>
      <% if @users.exists? %>
        <thead>
          <tr>
            <th>写真</th>
            <th>名前</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "img/no_image.jpg", size: "50x50", class:"mt-3 rounded-circle" %>
                <% end %>
              </td>
              <td><%= link_to user.name ,user_path(user), class: "text-dark" %></td>
              <td>フォロー中: <%= user.followings.count %></td>
              <td>フォロワー: <%= user.followers.count %></td>
            </tr>
          <% end %>
        </tbody>
      <% else %>
        <p class="text-center mt-3">フォローワーはいません</p>
      <% end %>
    </table>
  </div>
</div>