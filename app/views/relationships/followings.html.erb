<div class="container">
  <div class="mx-auto col-sm-9">
    <h2 class="text-main text-center"><%= @user.name %>さんがフォロー中</h2>
      <table class='table'>
        <% if @users.exists? %>
          <thead>
            <tr>
              <th>写真</th>
              <th>名前</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <!--プロフィール写真（user showリンク）-->
                  <%= link_to user_path(user) do %>
                    <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "img/no_image.jpg", size: "50x50", class:"mt-3 rounded-circle" %>
                  <% end %>
                </td>
                <!--名前（user showリンク）-->
                <td><%= link_to user.name ,user_path(user), class: "text-dark" %></td>
                <!--フォロー中の数を表示-->
                <td>フォロー中: <%= user.followings.count %></td>
                <!--フォローワー数を表示-->
                <td>フォロワー: <%= user.followers.count %></td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <p class="text-center">フォロー中のユーザーはいません</p>
        <% end %>
      </table>
    <%= paginate @users %>
  </div>
</div>