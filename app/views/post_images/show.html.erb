<div class="container" style="margin-bottom:200px;">
  <div class="row">
    <div class="mx-auto col-sm-10 mt-4 text-center">

      <h2 class="text-main">投稿詳細</h2>
        <!--cardひとかたまり-->
        <div class="card mx-auto" style="width:40rem">
          <!--投稿写真-->
          <%= attachment_image_tag @post_image, :image %>
          <div class="card-body">
            <div class="row">
              <!--投稿者のプロフィール写真-->
          　　<div class="col-2">
          　　    <p><%= attachment_image_tag @post_image.user, :profile_image, :fill, 80, 80, fallback: "img/no_image.jpg", class:"mt-3 rounded-circle"; %></p>
              <!--名前を押すとマイページへ-->
                <%= link_to user_path(@user), class: "text-dark" do %>
                  <p class="card-user"><%= @post_image.user.name %></p>
                <% end %>
              </div>
              <div class="col-9">
                <p class="card-title">タイトル：<%= @post_image.title %></p>
                <p class="card-text">説明：<%= @post_image.introduction %></p>
                <!--評価表示-->
                <p class="post_image-evaluation" data-score="<%= @post_image.evaluation %>"></p>

                <p class="card-create">投稿日：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>


                <!-- 投稿者=ログインしているユーザーだったら-->
                <% if @post_image.user == current_user %>
                  <%= link_to "編集",edit_post_image_path(@post_image), class: "btn btn-success" %>
                  <%= link_to "削除",post_image_path(@post_image), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
                <% end %>
              </div>
            </div>

            <div class="row">
              <div class="col-4">
                <!--コメント欄-->
                <%= form_with(model:[@post_image,@comment],local: true) do |f| %>
                  <%= f.text_area :comment, rows:'3',placeholder: "コメントはこちらへ" %>
                  <p><%= f.submit "送信", class: "btn btn-success" %></p>
                <% end %>
              </div>

              <div class="col-6">
                <!--コメント件数カウント-->
                <p class="card-comment">コメント件数:<%= @post_image.comments.count %></p>
                <!--コメント表示-->
                <% @post_image.comments.each do |comment| %>
                  <%= comment.user.name %>:
                  <%= comment.comment %>

                  <!--コメントした人がログインユーザーだったら-->
                  <% if comment.user == current_user %>
                    <%= link_to "削除", post_image_comment_path(comment.post_image, comment), method: :delete, class: "btn btn-danger" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
<!--評価-->
<script>
  $('.post_image-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>