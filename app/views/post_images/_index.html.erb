<!--cardひとかたまり-->
<div class="card-block">
  <% post_images.each do |post_image| %>
    <!--投稿画像クリックで詳細画面へ-->
    <div class="card m-2" style="width:18rem">
      <%= link_to post_image_path(post_image) do %>
        <%= attachment_image_tag post_image, :image, class:"card-img-top"; %>
      <% end %>

      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <!--投稿者のプロフィール写真-->
            <p><%= attachment_image_tag post_image.user, :profile_image, :fill, 50, 50, fallback: "img/no_image.jpg", class:"mt-3 rounded-circle"; %></p>
          </div>
          <div class="col-10">
            <!--タイトルクリックで詳細画面へ-->
            <p class="card-title">
              <%= link_to(post_image_path(post_image), class:"text-dark") do %>
                <strong><i class="fas fa-camera"></i><span><%= post_image.title %></span></strong>
              <% end %>
            </p>
            <!--説明-->
            <p class="card-text">説明：<%= post_image.introduction %></p>
            <p class="card-create">投稿日：<%= post_image.created_at.strftime('%Y/%m/%d') %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>