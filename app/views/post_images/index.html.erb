<div class="container" style="margin-bottom:200px;">
  <div class="row">
    <div class="mx-auto col-sm-10 mt-4 text-center">
      <h2 class="text-main">投稿一覧</h2>

      <%= @post_images.each do |post_image| %>
        <!--投稿画像　詳細へのリンク-->
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <%= link_to post_image_path(post_image) do %>
            <%= attachment_image_tag post_image, :image, class:"card-img-top"; %>
          <% end %>

          <div class="card-body">
            <div class="row">
              <div class="col-10">
                <!--タイトル　詳細へのリンク-->
                <p class="card-title">
                  <%= link_to(post_image_path(post_image), class:"text-dark") do %>
                  <strong><i class="fas fa-camera"></i><span><%= post_image.title %></span></strong>
                  <% end %>
                </p>
                <!--説明-->
                <p class="card-text">説明：<%= post_image.introduction %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

