<%= form_with model: post_image,local:true do |f| %>
  <div class="row">
    <div class='col-sm-2 offset-md-1 mt-3'>
      <div class="field">
        <p>画像</p>
      </div><br>
      <div class="field">
        <p>タイトル</p>
      </div><br><br>
      <div class="field">
        <p>説明</p>
      </div><br><br><br><br><br><br>
      <div class="evaluate_stars">
        <p>評価</p>
      </div><br>
      <div class="field">
        <p>タグ</p>
      </div><br>
    </div>
      <div class = "col-sm-7 offset-md-1 mt-3">
        <div class = "field">
          <p><%= f.attachment_field :image,class:"form-control-static" %></p>
        </div><br>
        <div class = "field">
          <p><%= f.text_field :title, class:"form-control-static col-4" %></p>
        </div><br>
        <div class = "field">
          <p><%= f.text_area :introduction, size:"35x6", placeholder:'ここは説明文を記述します', class:"form-control-static" %></p>
        </div><br>
        <div id="evaluate_stars"></div><br><br>
        <div class = "field">
          <p><%= f.text_field :name,value: @tag_list, placeholder:'海外,旅行',class:"form-control-static" %></p>
          <p>複数入力は　,　で区切ってください</p>
        </div><br>
        <div class="actions">
          <%= f.submit "送信", class: "btn btn-success w-25" %>
        </div>
      </div>
<% end %>
<!--評価-->
<script>
  $('#evaluate_stars').raty({
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'post_image[evaluation]',
    half: true,
  });
</script>
