<%= form_with model: post_image,local:true do |f| %>

  <div class="field mt-4">
    <%= f.label :画像,class: "col-4" %>
    <%= f.attachment_field :image,class:"form-control-static" %>
  </div>
  <div class="field mt-4">
    <%= f.label :タイトル,class: "col-4" %>
    <%= f.text_field :title, class:"form-control-static col-4" %>
  </div>
  <div class="field mt-4">
    <%= f.label :説明,class: "col-4" %>
    <%= f.text_area :introduction, size:"35x6", placeholder:'ここは説明文を記述します', class:"form-control-static" %>
  </div>
  <div class="actions mt-4">
    <%= f.submit class: "btn btn-success w-25" %>
  </div>
<% end %>