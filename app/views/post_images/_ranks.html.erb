<div class="card-block">
  <% ranks.each do |post_image| %>
    <div class="card m-2" style="width:18rem">
        <%= link_to post_image_path(post_image) do %>
          <%= attachment_image_tag post_image, :image, class:"card-img-top"; %>
        <% end %>

        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <!--投稿者のプロフィール写真-->
              <p><%= attachment_image_tag post_image.user, :profile_image, format: 'jpeg', fallback: "img/no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %></p>
            </div>
            <div class="col-10">
              <!--タイトルクリックで詳細画面へ-->
              <p class="card-title">
                <%= link_to(post_image_path(post_image), class:"text-dark") do %>
                  <strong><i class="fas fa-camera"></i><span><%= post_image.title %></span></strong>
                <% end %>
              </p>
              <!--説明-->
              <p class="card-text">説明：<%= post_image.introduction %></p>
              <p class="card-create">投稿日：<%= post_image.created_at.strftime('%Y/%m/%d') %></p>
              <div id="favorite_buttons_<%= post_image.id %>">
                <%= render "favorites/favorite-btn", post_image: post_image %>
              </div>
              <p><%= link_to "#{post_image.comments.count} コメント", post_image_path(post_image) %></p>

            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>